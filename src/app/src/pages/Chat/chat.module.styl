$background-balanced = radial-gradient(61.04% 89.69% at 100% 100%, rgba(200, 250, 255, 0.08) 0%, rgba(28, 210, 229, 0.08) 40.63%, rgba(28, 210, 229, 0) 100%), radial-gradient(43.78% 64.34% at 60.31% 100%, rgba(23, 74, 228, 0.08) 0%, rgba(23, 74, 228, 0) 100%), linear-gradient(180deg, rgba(23, 74, 228, 0) 29.44%, rgba(23, 74, 228, 0.06) 100%), linear-gradient(90deg, #F3F3F7 0%, #EBF0F9 100%)
$background-precise = linear-gradient(90deg, rgb(236, 242, 245) 0%, 1.3089%, rgb(234, 243, 245) 2.6178%, 17.4084%, rgb(232, 241, 242) 32.199%, 36.2565%, rgb(229, 241, 242) 40.3141%, 45.0262%, rgb(227, 240, 242) 49.7382%, 51.8325%, rgb(226, 239, 245) 53.9267%, 57.199%, rgb(224, 239, 245) 60.4712%, 62.9581%, rgb(220, 237, 245) 65.445%, 66.2304%, rgb(220, 237, 245) 67.0157%, 68.0628%, rgb(218, 236, 244) 69.1099%, 75.1309%, rgb(214, 233, 240) 81.1518%, 82.5916%, rgb(211, 231, 240) 84.0314%, 84.4241%, rgb(212, 231, 239) 84.8168%, 86.911%, rgb(210, 230, 239) 89.0052%, 94.5026%, rgb(207, 227, 236) 100%)

.wrap {
  &.creative {
    background: $background-creative
  }

  &.balanced {
    background: $background-balanced
  }

  &.precise {
    background: $background-precise
  }

  main {
    a {
      color: #1a0dab

      &:visited {
        color: #681da8
      }

      &:hover {
        text-decoration: underline
      }
    }
  }

  position: relative
  overflow-y: auto
  box-sizing: border-box
  padding: 8px 15px 18px
  padding-top: 8px
  min-height: 120px
  max-height: initial
  border-radius: 8px
  background: $background-balanced
  word-wrap: break-word
  word-break: break-word
  font-size: 14px
  line-height: 1.5em
  transition: max-height 5s

  header {
    display: flex
    align-items: center
    height: 40px

    img {
      width: 24px
      height: 24px
    }

    h1 {
      flex: 1
      font-weight: 700
      font-size: 18px
      margin-inline-start: 0.5em
    }

    .btns {
      opacity: 0
    }
  }

  hr {
    margin: 0.5em
    height: 0.5px
    border: 0px
    background-color: #dcdcdc
  }
}

.wrap header:hover .btns {
  opacity: 1
  transition: opacity 0.5s
  will-change: opacity
}

.cont {
  .loading {
    position: absolute
    top: calc(50% + 26px)
    left: 50%
    transform: translate(-50%, -50%)
  }

  p {
    line-height: 22px
  }

  ul, ol {
    padding-inline-start: 15px

    li {
      margin: 0.4rem
      padding: 0 0.4rem
      list-style: initial
    }
  }

  ol li {
    list-style: decimal
  }
}

.newtabBox {
  // min-height: 100vh
  .wrap {
    margin: 50px auto 0
    max-width: 400px
    height: auto
  }
}

.more {
  display: flex
  flex-flow: row wrap
  row-gap: 6px

  a {
    display: flex
    justify-content: center
    align-items: center
    box-sizing: border-box
    padding: 0px 8px
    border-radius: 4px
    background: #d1dbfa
    color: #123bb6
    text-decoration: none
    font-weight: 500
    line-height: 24px
    transition: background-color 0.2s
    margin-inline-end: 6px

    &:hover {
      background-color: #afbde8
      text-decoration: none
    }
  }
}

.sourceAttributions {
  li {
    line-height: 1.2em
  }
}

.settings {
  .triggerModeSmall {
    color: #ccc !important
    font-size: 12px !important
  }

  a:hover {
    text-decoration: underline
  }
}

.error {
  em {
    font-weight: bold
  }

  padding: 10px
  // background: #f8e3eb
  border: 0.5px solid #f8e3eb
  border-radius: 8px
  background-color: #fff2f0
  color: #333

  & [class*='ant-btn'] span {
    color: #fff !important
  }
}
