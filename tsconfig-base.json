{
  "ts-node": {
    "transpileOnly": true
  },
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "module": "ESNext",
    "target": "esnext",
    "moduleResolution": "Node",
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noUnusedLocals": false,
    "preserveWatchOutput": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "sourceMap": true
  },
  "exclude": ["**/node_modules", "**/dist"]
}
