{
  "root": "src",
  "extends": "./tsconfig-base.json",
  "compilerOptions": {
    "strict": true,
    "outDir": "./dist",
    "module": "CommonJS",
    "target": "ESNext",
    "declaration": true,
    "declarationDir": "dist/types",
    "types": ["zepto", "chrome"],
    "paths": {
      "@/*": ["./src/*"],
      "@@/*": ["./src/universe/*"]
    }
  },
  "include": ["src", "scripts"]
}
